                {user.avatar}
              </div>
              <h3 className="text-xl font-bold text-white mb-2">{user.name}</h3>
              <div className="text-3xl font-bold bg-gradient-to-r from-purple-400 to-blue-400 bg-clip-text text-transparent mb-4">
